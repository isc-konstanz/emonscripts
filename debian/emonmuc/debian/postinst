#!/bin/sh
set -e

# Source debconf library.
. /usr/share/debconf/confmodule

db_get emoncms/user
if [ ! -z "$RET" ]; then
    user=$RET
else
    user="root"
fi

php -f "<ROOT_DIR>/scripts/database_update.php"
php -f "<ROOT_DIR>/scripts/emonmucdevupdate.php"

chown -R $user "<ROOT_DIR>/Modules/muc"
chown -R $user "<ROOT_DIR>/Modules/channel"
chown -R $user "<ROOT_DIR>/Theme/seal"

#DEBHELPER#

exit 0
